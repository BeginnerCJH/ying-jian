/* component/tab/tab.wxss */
@import "../../template/emptyTip/emptyTip.wxss";
.tab-title {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.tab-title::before {
  content: "";
  display: block;
  width: 100%;
  right: 0;
  bottom: 0;
  background: #eee;
  height: 6rpx;
  position: absolute;
  z-index: -1;
}

.tab-title .on {
  border-bottom: 6rpx #47a86c solid;
}

.tab-title .one {
  flex: 1;
  text-align: center;
}

.tab-con {
  position: absolute;
  top: 120rpx;
  bottom: 0;
  width: 100%;
}

.tab-con .swiper {
  height: 100%;
}
