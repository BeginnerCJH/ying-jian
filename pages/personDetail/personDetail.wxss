/* pages/personDetail/personDetail.wxss */

.person-top {
  width: 100%;
  height: 600rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  box-sizing: border-box;
}

.person-top .person-bg {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -2;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center top;
  filter: blur(15rpx);
  transform: scale(1.2);
}

.person-bg:before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.person-top .avatars {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.avatars image {
  height: 280rpx;
  width: 280rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.avatars .avatars-name {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 25rpx;
  padding: 10rpx 15rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2) inset, 1px 1px 0 rgba(255, 255, 255, 0.1);
}

.avatars .avatars-name_en, .avatars-born_place {
  font-size: 28rpx;
  line-height: 60rpx;
}

.avatars .collect {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 160rpx;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  line-height: 64rpx;
  height: 64rpx;
  color: #fff;
  box-sizing: border-box;
  padding-left: 8%;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 20%;
  background-position: 10% center;
}

.person-bottom {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.person-bottom .bottom-title {
  position: relative;
  line-height: 50rpx;
  padding-left: 30rpx;
  display: block;
}

.bottom-title::after {
  content: "";
  display: block;
  height: 50rpx;
  width: 10rpx;
  background: #48a76d;
  position: absolute;
  top: 0;
  left: 0;
}

.person-bottom .summary, .photos, .works {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.summary .summary-con {
  text-indent: 2em;
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  position: relative;
}

.summary-con .con {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  padding-right: 1.5em;
}

.summary-con .ucon {
  display: block;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 0;
  overflow: visible;
  padding-right: 0;
  height: auto;
}

.summary-con .unfold {
  color: #48a76d;
  font-size: 32rpx;
  position: absolute;
  right: -20rpx;
  bottom: 0;
}

.photos .photos-con {
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.photos-con image {
  display: inline-block;
  width: 250rpx;
  height: 360rpx;
  margin-right: 20rpx;
}

.works-con {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.works-con .works-list {
  width: 48%;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.works-list:nth-of-type(2n) {
  margin-right: 0;
}

.works-list image {
  height: 500rpx;
  width: 100%;
}

.works-list .works-title, .works-roles {
  background: #f8f8f8;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.works-list .works-roles {
  font-size: 28rpx;
  color: #666;
}
