.main{
  padding: 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.main .list{
  width: 49%;
  background-color: #fff;
  height: 650rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}
.list .list-top{
  position: relative;
  height: 500rpx;
  border-radius: 10rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.list-top image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}
.list-top .rating{
  display: inline-block;
  background: rgba(0, 0, 0, .5);
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  color: #fff;
  text-align: right;
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}
.list .list-bottom{
  border: 2rpx solid #e4e4e4;
  border-radius: 10rpx;
  border-top: none;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  height: 150rpx;
  box-sizing: border-box;
}
.list-bottom .original-title{
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-bottom .genres{
  width: 100%;
  box-sizing: border-box;
  padding: 5rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  white-space: nowrap;
}
.genres .genres-li{
  display: inline-block;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  text-align: center;
  border: 2rpx solid #ccc;
  margin-right: 10rpx;
}
.genres-li:last-of-type{
  margin-right: 0rpx;
}
.tip{
  color: #999;
  width: 100%;
  display: inline-block;
  line-height: 64rpx;
  text-align: center;
}